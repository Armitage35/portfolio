{
	"name": "portfolio",
	"version": "0.8.0",
	"description": "A static porfolio for Adrien D. Ahlqvist",
	"author": "Adrien D. Ahlqvist",
	"license": "MIT",
	"private": true,
	"scripts": {
		"serve": "vue-cli-service serve",
		"start": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"test": "vue-cli-service lint & sass-lint -c ./sass-lint.yml '**/*.scss' -v -q",
		"lint": "vue-cli-service lint",
		"sass-lint": "sass-lint -c ./sass-lint.yml '**/*.scss' -v -q",
		"deploy": "bash src/deploy.sh"
	},
	"dependencies": {
		"core-js": "^3.2.1",
		"vue": "^2.6.10"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^3.11.0",
		"@vue/cli-plugin-eslint": "^3.11.0",
		"@vue/cli-service": "^3.11.0",
		"babel-eslint": "^10.0.1",
		"eslint": "^5.16.0",
		"eslint-plugin-vue": "^5.0.0",
		"node-sass": "^4.12.0",
		"sass-lint": "^1.13.1",
		"sass-loader": "^8.0.0",
		"vue-template-compiler": "^2.6.10"
	},
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/essential",
			"eslint:recommended"
		],
		"rules": {},
		"parserOptions": {
			"parser": "babel-eslint"
		}
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions"
	]
}
